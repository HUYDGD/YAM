{
    "main": "./app/app.js",
    "name": "yam",
    "version": "2.1.1",
    "author": {
        "name": "Millennium Earl"
    },
    "description": "Unoffical Game Updater for the F95Zone platform",
    "repository": {
        "type": "git",
        "url": "https://github.com/MillenniumEarl/YAM.git"
    },
    "license": "UNLICENSED",
    "private": true,
    "keywords": [
        "game",
        "games",
        "updater",
        "f95zone",
        "f95"
    ],
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist:win": "electron-builder --win --x64 --ia32",
        "dist:mac": "electron-builder --mac",
        "dist:linux": "electron-builder --linux"
    },
    "engines": {
        "node": ">=10.0"
    },
    "dependencies": {
        "@materializecss/materialize": "^1.0.0",
        "f95api": "^1.6.5",
        "ajv": "^6.12.6",
        "electron-is-dev": "^1.2.0",
        "electron-log": "^4.3.0",
        "electron-online": "^1.0.0",
        "electron-store": "^6.0.1",
        "glob": "^7.1.6",
        "i18next": "^19.8.4",
        "i18next-electron-language-detector": "0.0.10",
        "imagemin": "^7.0.1",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-webp": "^6.0.0",
        "material-design-icons": "^3.0.1",
        "nedb-promises": "^4.1.0",
        "simple-image-downloader": "^4.0.2",
        "string-similarity": "^4.0.3"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "electron": "^11.0.2",
        "electron-builder": "^22.9.1",
        "eslint": "^7.14.0"
    },
    "build": {
        "appId": "com.electron.yam",
        "productName": "YAM",
        "copyright": "Copyright Â© 2020 ${author}",
        "publish": [
            "github"
        ],
        "files": [
            "**/*",
            "!.github${/*}",
            "!.vscode${/*}",
            "!docs${/*}",
            "!resources/images/github${/*}"
        ],
        "directories": {
            "output": "./dist"
        },
        "win": {
            "icon": "./resources/images/icon.ico",
            "publisherName": "${author}"
        },
        "mac": {
            "category": "public.app-category.games",
            "target": "default",
            "icon": "./resources/images/icon.icns",
            "type": "distribution"
        },
        "linux": {
            "target": "AppImage",
            "icon": "./resources/images/icon.icns"
        }
    }
}
